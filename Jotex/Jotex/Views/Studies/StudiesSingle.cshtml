@model  StudyViewModel

<!-- start page-title -->
<section class="page-title">
    <div class="page-title-container">
        <div class="page-title-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col col-xs-12">
                        <h2>Case studies</h2>
                        <ol class="breadcrumb">
                            <li><a href="index.html">Home</a></li>
                            <li>Case studies</li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end container -->
        </div>
    </div>
</section>
<!-- end page-title -->

<!-- start project-single-section -->
<section class="project-single-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col col-md-6">
                <div class="img-holder">
                    <img src="~/images/project-single/@Model.StudySingles.ElementAt(0).Image" >
                </div>
            </div>
            <div class="col col-md-6">
                <div class="project-details">
                    <h2>@Model.StudySingles.ElementAt(0).Title</h2>
                    <h3>@Model.StudySingles.ElementAt(0).Subtitle</h3>
                    <p>@Model.StudySingles.ElementAt(0).Text1</p>
                    <div class="project-info">
                        <ul class="clearfix">
                            @foreach (var item in @Model.StudySingles.ElementAt(0).StudyDetails)
                            {
                                <li><span>@item.Key</span> @item.Value</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <div class="project-single-tab clearfix">
                    <ul class="nav">
                        <li class="active">
                            <a href="#precautions" data-toggle="tab">Challenge</a>
                        </li>
                        <li>
                            <a href="#intelligence" data-toggle="tab">Solution</a>
                        </li>
                        <li>
                            <a href="#specializations" data-toggle="tab">Results</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="precautions">
                            <p>@Model.StudySingles.ElementAt(0).Text2</p>
                        </div>
                        <div class="tab-pane fade" id="intelligence">
                            <p>@Model.StudySingles.ElementAt(0).Text3</p>
                        </div>
                        <div class="tab-pane fade" id="specializations">
                            <p>@Model.StudySingles.ElementAt(0).Text4</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <div class="related-case-studies">
                    <h2>Related Case Studies</h2>
                    <div class="case-studies-grids">
                        @foreach (var item in Model.AgentPictures)
                        {
                            <div class="grid">
                                <div class="img-holder">
                                    <img src="~/images/case-studies/@item.Picture">
                                </div>
                                <div class="overlay">
                                    <div class="content">
                                        <p class="cat">Insurance</p>
                                        <h3><a href="#">Life insurance</a></h3>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end container -->
</section>
<!-- end project-single-section -->
